<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".OpcionesActivity">
    <ScrollView
        android:id="@+id/contenedor"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="60dp"
            android:paddingLeft="20dp">
            <Switch
                android:id="@+id/switchCiudadCasos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="¿Durante los últimos 14 días ha viajado a una ciudad con casos de COVID-19 positivos?" />
            <Switch
                android:id="@+id/switchOtraPersona"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="¿Ha estado con alguna persona que tenga COVID-19?" />
            <Switch
                android:id="@+id/switchFiebre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="¿Tiene fiebre?" />
            <Switch
                android:id="@+id/switchDolorCabeza"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="¿Tiene dolor de cabeza?"/>
            <Switch
                android:id="@+id/switchTos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="¿Tiene tos?" />
            <Switch
                android:id="@+id/switchDolorCuerpo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="¿Tiene dolor en el cuerpo?"  />
            <Switch
                android:id="@+id/switchOtrasCondiciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="¿Tiene alguna de las siguientes condiciones? (Diabetes, hipertensión, problemas cardiacos, EPOC, VIH, cáncer)" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/buttonBarStyle">
                <Button
                    android:id="@+id/botonPreguntasContinuar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:padding="10dp"
                    android:text="Continuar"
                    style="?android:attr/buttonBarButtonStyle"
                    android:textColor="#fff" />
                <Button
                    android:id="@+id/botonPreguntasCancelar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?android:attr/buttonBarButtonStyle"
                    android:text="Cancelar" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="En caso de presentar síntomas relacionados al COVID-19, permanece aislado y contacta a las autoridades de tu ciudad para que te ofrezcan la información adecuada. Consulta los síntomas en la página oficial de la OMS."
                android:textColor="@color/colorInfo"
                android:background="@color/colorFondoInfo"
                android:padding="10dp" />
        </LinearLayout>
    </ScrollView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Una aplicación de Andrés"
        android:background="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="@id/contenedor"
        android:padding="10dp" />
</androidx.constraintlayout.widget.ConstraintLayout>